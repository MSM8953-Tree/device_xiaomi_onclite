typeattribute system_server system_executes_vendor_violators;

# Input devices
r_dir_file(system_server, idc_file);
r_dir_file(system_server, keylayout_file);

# Fingerprint
get_prop(system_server, vendor_fp_prop);

# Alarm
allow system_server vendor_alarm_boot_prop:file { read open getattr };

# Proc
allow system_server proc:file { getattr read open };

# Health HAL
r_dir_file(system_server, sysfs_battery_supply)
allow system_server sysfs_battery_supply:dir { search };
allow system_server sysfs_battery_supply:file { open read getattr };
